{
  "manifest_version": 3,
  "name": "Cookie Editor",
  "version": "1.0",
  "description": "A cookie manager extension",
  "permissions": [
    "cookies",
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/bolt_16.png",
      "48": "icons/bolt_48.png",
      "128": "icons/bolt_128.png"
    }
  },
  "icons": {
    "16": "icons/bolt_16.png",
    "48": "icons/bolt_48.png",
    "128": "icons/bolt_128.png"
  }
}